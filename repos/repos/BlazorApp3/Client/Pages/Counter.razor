@page "/counter"


@inject IJSRuntime JSRuntime
@using System.ComponentModel

<h3>Google reCAPTCHA</h3>

<div id="google_recaptcha"></div>

<button class="btn   btn-primary" @onclick="ShowResponse">Show Response</button>

<br />

<p>@captchaResponse</p>


<DntInputCaptcha DisplayMode="DisplayMode.SumOfTwoNumbersToWords" Language="NumberToWordLanguage.English" @bind-Value="CaptchaText1" />

@CaptchaText1

@code {
    public string CaptchaText1 { get; set; }
}


@code {
    private string captchaResponse;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeAsync<int>("googleRecaptcha", DotNetObjectReference.Create(this), "google_recaptcha", "6Lf9YVQlAAAAACIE0pYgixD3z1rIVwYnAB33vQfa");
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    [JSInvokable, EditorBrowsable(EditorBrowsableState.Never)]
    public void CallbackOnSuccess(string response)
    {
        captchaResponse = response;
    }

    [JSInvokable, EditorBrowsable(EditorBrowsableState.Never)]
    public void CallbackOnExpired(string response)
    {
        //...
    }


    private void ShowResponse()
    {
        captchaResponse = $"The response for the Google reCAPTCHA widget: {captchaResponse}";
    }
   }
