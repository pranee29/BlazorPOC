@using System;
@using System.Collections.Generic;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Layout</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@InnerNavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href=@l1[0] Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Admin Users
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href=@l2[0]>
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href=@l3[0]>
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>
    </nav>
</div>

@code {
    List<string> l1 = new List<string>();
    List<string> l2 = new List<string>();
    List<string> l3 = new List<string>();

    public InnerNavMenu()
    {

        l1.Add("h1");
        l1.Add("h2");
        l1.Add("h3");
        l1.Add("h4");

        l2.Add("c1");
        l2.Add("c2");
        l2.Add("c3");
        l2.Add("c4");

        l3.Add("f1");
        l3.Add("f2");
        l3.Add("f3");
        l3.Add("f4");
    }

    private bool collapseNavMenu = true;

    private string? InnerNavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
